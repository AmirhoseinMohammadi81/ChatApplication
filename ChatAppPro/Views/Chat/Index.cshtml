@{
    ViewData["Title"] = "ChatRoom";
}


<div class="text-center">
    <h1 class="display-4">Chat Room</h1>
</div>

<div class="row rounded-lg overflow-hidden shadow text-right" dir="rtl">
    <div class="col-5 px-0">
        <div class="bg-white">
            <div class="bg-gray px-4 py-2 bg-light text-right">
                <p class="h5 mb-0 py-1">
                    کاربران
                </p>
            </div>

            <div class="messages-box">
                <div class="list-group rounded-0" id="chatUsers"></div>
            </div>
        </div>
    </div>

    <div class="col-7 px-0">
        <div id="chatRoom" class="px-4 py-5 chat-box bg-white">
        </div>

        <div class="input-group position-absolute">
            <input id="messageInput" type="text" placeholder="پیام خود را وارد کنید" class="form-control rounded-0 border-0 py-4 bg-light" aria-describedby="button-addon2"/>
            <div class="input-group-append">
                <button id="send" type="button" class="btn btn-link">ارسال</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/chat.js"></script>
            }

